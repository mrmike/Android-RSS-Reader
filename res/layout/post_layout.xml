<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="TextView"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_gravity="center" android:id="@+id/title"></TextView>
	
	<ScrollView android:layout_width="fill_parent" android:id="@+id/scrollView1"
		android:layout_height="wrap_content">
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			
			<TextView android:text="TextView" android:id="@+id/content"
		android:paddingLeft="20dp" android:paddingRight="20dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dp"></TextView>
			</LinearLayout>
	</ScrollView>



</LinearLayout>
